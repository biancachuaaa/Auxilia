<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="styles.css">
    <link rel="stylesheet" type="text/css" href="home.css">

    <title>Home | Auxilia</title>
</head>
<body>
    <header id="head">
        <nav>
          <div class="logo">
            <img src="img/Auxilia.png"></img>
          </div>
          <ul class="navlist">
            <li><a href="home" method="get">Home</a></li>
            <li><a href="meditation" method="get">Meditation</a></li>
            <li><a href="about" method="get">About</a></li>
            <li><a href="profile" method="get">Profile</a></li>
          </ul>
        </nav>


      </header>
      
      <main>
        <div class="home-banner">
          <div class="banner-container">
            <h1 class="banner">WELCOME <br> {{firstname}} {{lastname}}</h1>
          </div>
          
        </div>

        <div class="home-plant">
          <h1 id="plant_heading">MY PLANT</h1>

         <!-- partial:index.partial.html -->
        {{!-- <div class="wrapper"> --}}
         
            
          <div class="box">
            <div class="stem">
              <div class="leaf leaf00">
                <div class="line"></div>
              </div>
              <div class="leaf leaf01 ">
                <div class="line"></div>
              </div>
              <div class="leaf leaf02 ">
                <div class="line"></div>
              </div>
              <div class="leaf leaf03 ">
                <div class="line"></div>
              </div>
              <div class="leaf leaf04 ">
                <div class="line"></div>
              </div>
              
            
            </div>
            <div class="pot-top"></div>
            <div class="pot"></div>
            
          </div>
        {{!-- </div> --}}

        <!-- partial -->
        </div>

        <div class="home-tasks">

           <div class="notepadbase">
              <div class="tasks-header">
                <h1 class="textbox" >Daily Tasks</h1>
              </div>
              <div class="tasks-list">
                <div class="task-item">
                    {{#each tasks}}
                      {{#if_equal _id "5f6b4ecde151436cd835476e"}}
                        <div class="item">
                          <div class="drop"></div>
                          <p class="textbox1" >{{task_description}}</p>
                        </div>
                      {{/if_equal}}

                      {{#if_equal _id "5f6b4eedcf95fd4d6c7ccf91"}}
                        <div class="item">
                          <div class="drop2"></div>
                          <p class="textbox2" >{{task_description}}</p>
                        </div>
                      {{/if_equal}}

                      {{#if_equal _id "5f6b4f38af2c041f24bd46f3"}}
                        <div class="item">
                          <div class="drop3"></div>
                          <p class="textbox3" >{{task_description}}</p>
                        </div>
                      {{/if_equal}}

                      {{#if_equal _id "5f6b4f4328b4895264821fae"}}
                        <div class="item">
                          <div class="drop4"></div>
                          <p class="textbox4" >{{task_description}}</p>
                        </div>
                      {{/if_equal}}

                      {{#if_equal _id "5f6b4f58823d607768875cca"}}
                        <div class="item">
                          <div class="drop5"></div>
                          <p class="textbox5" >{{task_description}}</p>
                        </div>
                      {{/if_equal}}
                      
                    {{/each}}

                </div>
              </div> 
          </div>
        </div>


      </main>
      
      <!-- partial -->
      <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js'></script>
      <script src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js'></script><script  src="./home.js"></script>
</body>
</html>